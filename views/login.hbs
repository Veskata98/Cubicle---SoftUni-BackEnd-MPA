<h1>
    Login Form
</h1>
{{#if errorMessages}}
    <div class='error'>
        {{#each errorMessages}}
            <p>
                {{this}}
            </p>
        {{/each}}
    </div>
{{/if}}
<div class='form'>
    <form action='/auth/login' method='POST'>
        <label for='username'>
            Username
        </label>
        <input type='text' id='username' name='username' value='{{username}}' />

        <label for='password'>
            Password
        </label>
        <input type='password' id='password' name='password' />
        <input type='submit' value='Login' />
    </form>
</div>