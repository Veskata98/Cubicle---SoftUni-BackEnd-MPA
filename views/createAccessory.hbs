<main>
    <h1>
        Create Accessory
    </h1>
    {{#if errorMessages}}
        <div class='error'>
            {{#each errorMessages}}
                <p>
                    {{this}}
                </p>
            {{/each}}
        </div>
    {{/if}}
    <div class='form'>
        <form action='/create/accessory' method='POST'>
            <label for='name'>
                Name
            </label>
            <input type='text' id='name' name='name' value='{{body.name}}' />
            <label for='name'>
                Description
            </label>
            <textarea id='description' name='description'>{{body.description}}</textarea>
            <label for='image'>
                ImageUrl
            </label>
            <input type='text' id='image' name='imageUrl' value='{{body.imageUrl}}' />
            <input type='submit' value='Create' />
        </form>
    </div>
</main>